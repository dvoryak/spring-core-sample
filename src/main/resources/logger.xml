<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean name="fileLogger" class="com.project.FileEventLogger" init-method="init">
        <constructor-arg name="fileName" value="file.txt"/>
    </bean>

    <bean name="consoleLogger" class="com.project.ConsoleEventLogger"/>

    <bean name="cacheEventLogger" class="com.project.CacheFileEventLogger" parent="fileLogger">
        <constructor-arg name="cacheSize" value="10"/>
    </bean>

    <bean name="combinedEventLogger" class="com.project.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleLogger"/>
                <ref bean="fileLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
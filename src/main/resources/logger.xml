<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean name="fileLogger" class="com.project.FileEventLogger" init-method="init">
        <constructor-arg name="fileName" value="file.txt"/>
    </bean>

    <bean name="consoleLogger" class="com.project.ConsoleEventLogger"/>

    <bean name="cacheEventLogger" class="com.project.CacheFileEventLogger" parent="fileLogger">
        <constructor-arg name="cacheSize" value="10"/>
    </bean>

</beans>